{
  "manifest_version": 3,
  "name": "Salesforce Open Sharing Detail",
  "version": "1.0.0",
  "description": "Adds a 'Share' button next to the global search on Salesforce pages that opens Classic Sharing Detail for the current record.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "*://*.lightning.force.com/*",
    "*://*.my.salesforce.com/*",
    "*://*.salesforce.com/*",
    "*://*.visual.force.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.lightning.force.com/*",
        "*://*.my.salesforce.com/*",
        "*://*.salesforce.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}